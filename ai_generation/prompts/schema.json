{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Prompt Template Schema",
  "description": "Schema for AI prompt templates used in MCP automation",
  "type": "object",
  "required": ["name", "version", "template", "variables"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique identifier for the prompt",
      "pattern": "^[a-z0-9_]+$"
    },
    "version": {
      "type": "string",
      "description": "Semantic version of the prompt",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "created_by": {
      "type": "string",
      "description": "Author or system that created the prompt"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of creation"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of the prompt's purpose"
    },
    "category": {
      "type": "string",
      "enum": ["server_generation", "test_generation", "evaluation", "discovery"],
      "description": "Category for organizing prompts"
    },
    "template": {
      "type": "string",
      "description": "The actual prompt template with {variable} placeholders"
    },
    "variables": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of variables required in the template"
    },
    "examples": {
      "type": "array",
      "items": {
        "type": "object"
      },
      "description": "Example inputs and outputs for this prompt"
    },
    "expected_output_format": {
      "type": "string",
      "enum": ["json_object", "json_array", "text", "markdown"],
      "description": "Expected format of the AI response"
    }
  }
}